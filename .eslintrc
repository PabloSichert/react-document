{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
        "jsx-quotes": ["error", "prefer-single"],
        "linebreak-style": ["error", "unix"],
        "no-var": "error",
        "prefer-const": "error",
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
